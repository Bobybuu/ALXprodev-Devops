#!/bin/bash

INPUT_FILE="data.json"

NAME=$(jq -r '.name' "$INPUT_FILE")
HEIGHT=$(jq -r '.height' "$INPUT_FILE")
WEIGHT=$(jq -r '.weight' "$INPUT_FILE")
TYPE=$(jq -r '.types[0].type.name' "$INPUT_FILE")

# Height in decimetres -> metres
HEIGHT_METERS=$(awk "BEGIN {print $HEIGHT/10}")
# Weight in hectograms -> kilograms
WEIGHT_KG=$(awk "BEGIN {print $WEIGHT/10}")

echo "$(echo "$NAME" | sed 's/.*/\u&/') is of type $(echo "$TYPE" | sed 's/.*/\u&/'), weighs ${WEIGHT_KG}kg, and is ${HEIGHT_METERS}m tall."
